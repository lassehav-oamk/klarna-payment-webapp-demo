{
  "name": "klarna-payment-demo",
  "version": "1.0.0",
  "description": "Educational demo of Klarna payment integration with React and Express",
  "main": "setup.js",
  "scripts": {
    "setup": "node setup.js",
    "install-all": "npm run install-backend && npm run install-frontend",
    "install-backend": "cd backend && npm install",
    "install-frontend": "cd frontend && npm install",
    "dev": "concurrently \"npm run dev-backend\" \"npm run dev-frontend\"",
    "dev-backend": "cd backend && npm run dev",
    "dev-frontend": "cd frontend && npm run dev",
    "start-backend": "cd backend && npm start",
    "start-frontend": "cd frontend && npm run build && npm run preview"
  },
  "keywords": [
    "klarna",
    "payment",
    "integration",
    "demo",
    "education",
    "react",
    "express",
    "nodejs"
  ],
  "author": "Educational Demo",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "educational-demo"
  },
  "bugs": {
    "url": "educational-demo"
  },
  "homepage": "educational-demo"
}